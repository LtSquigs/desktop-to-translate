{
  "name": "desktop-to-translate",
  "version": "1.0.0",
  "main": "main.js",
  "releaseVersion": "1.0.0",
  "author": "ltsquigs",
  "description": "Desktop application to OCR text and automatically send it to Google Translate",
  "build": {
    "productName": "Desktop To Translate",
    "appId": "desktop.to.translate",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "identity": null,
      "icon": "build/ic_translate_black_48dp_large.png",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "win": {
      "asar": false,
      "target": "nsis",
      "icon": "build/ic_translate_black_48dp_large.png"
    }
  },
  "postinstall": "electron-builder install-app-deps",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mw"
  },
  "devDependencies": {
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "material-design-icons": "^3.0.1"
  },
  "dependencies": {
    "@google-cloud/vision": "^2.4.0",
    "bootstrap": "^5.1.3",
    "compare-versions": "^3.6.0",
    "datauri": "^4.1.0",
    "jimp": "^0.16.1",
    "mecab-async": "^0.1.2",
    "node-tesseract-ocr": "^2.2.1",
    "open": "^8.3.0",
    "screenshot-desktop": "^1.12.7",
    "tesseract.js": "^2.1.5",
    "wanakana": "^4.0.2"
  }
}
